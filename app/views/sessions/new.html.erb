<% provide(:title,"Login") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1> Login</h1>
      <%= form_for(:session, url: sessions_path ) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Login", class: "btn btn-large btn-primary btn-signup" %>
        <p class="pad-top-10">New User? <%= link_to "Sign up now!",signup_path %></p>

      <% end %>
    </div>

  </div>

</div>